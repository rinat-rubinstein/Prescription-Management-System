@model PrescriptionBE.Administrator

@{
    ViewBag.Title = "AdministratorEntrance";
    Layout = "~/Views/shared/MainLayout.cshtml";
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}
@using (Html.BeginForm("AdministratorEntrance", "Home"))
{
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-7 ftco-animate">
                    <form action="#" class="billing-form">
                        <h3 class="mb-4 billing-heading">Administrator Entrance</h3>
                        <div class="row align-items-end">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(moodel => Model.UserName, htmlAttributes: new { @class = "control-lable col-md-6" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control text-dark" } })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "form-danger text-dark" })
                                    </div>
                                </div>
                            </div>
                            <div class="w-100"></div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="password">Password</label>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Entrance" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </section>
}
