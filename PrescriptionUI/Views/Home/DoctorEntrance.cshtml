@model PrescriptionUI.Models.DoctorViewModel
@{
    ViewBag.Title = "DoctorEntrance";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

@using (Html.BeginForm("DoctorEntrance", "Home"))
{
<div class="container login-container">
    <h3 class="mb-4 billing-heading">Doctor Entrance</h3>
    <div class="row">
        <div class="col-md-6 login-form-1">
            <form>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Your Name *" value=""
                           @Html.EditorFor(m => m.Name, new { htmlAttributes = new { } })
                           @Html.ValidationMessageFor(model => model.Name, "", new { @class = "form-danger text-dark" })
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.LicenseExpirationDate, htmlAttributes: new { @class = "control-label col-md-10" })
                    <div class="col-md-10">
                        <input type="date" id="LicenseExpirationDate" name="LicenseExpirationDate" required="" style="position:relative; width:315px;" class="form-control text-dark" placeholder="start" />
                    </div>

                </div>

                <div>
                    <input type="submit" value="Login" class="btn btn-black py-3 px-5" />
                </div>
                <div class="form-group">
                    <a href="#" class="ForgetPwd"></a>
                </div>
            </form>
        </div>
    </div>
</div>
}



