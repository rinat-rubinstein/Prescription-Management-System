@model PrescriptionUI.Models.GraphModel
@{
    ViewBag.Title = "AdministratorOptions";
    Layout = "~/Views/Shared/OptionsLayout.cshtml";
}

datasets: [
@for (int i = 0; i < Model.mat.Length; i++)
{

    @:{
    @:label: "data@(DateTime.Now.ToString())",
    @:fill: false,
    @:data:[@foreach (var t in Model.mat[i])
    {@(t + ",")} ]
    @: }
    @:,
}
]

<center>
    <h1 style="font-family:'Agency FB'">Wellcome to the Administrator's Menu</h1>
</center>

@using (Html.BeginForm("AdministratorOptions", "Administrator", FormMethod.Post))
{  
    <div class="form-group">
        @Html.LabelFor(model => model.month, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.month, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.month, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.ActionLink("Change range", "AdministratorOptions", new { item = Model })
            </div>
        </div>

        <div class="form-group">
            <div>
                <div style="font-family:'Agency FB'">Filter desired medications:</div>
                @Html.ListBoxFor(model => model.CategoryId, Model.Categories, new { multiple = "multiple" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.ActionLink("filter", "AdministratorOptions", new { item = Model })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.ActionLink("Update Your Details", "Edit", new { id = Model.AdministratorId })
            </div>
        </div>
        </div>
    }