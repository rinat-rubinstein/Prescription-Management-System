@model PrescriptionUI.Models.GraphModel
@{
    ViewBag.Title = "AdministratorOptions";
    Layout = "~/Views/Shared/OptionsLayout.cshtml";
}






<div style="width:75%;">
    <canvas id="canvas"></canvas>
</div>
<br>
<br>
<script>
    var MONTHS = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
    var config = {
        type: 'line',
        data: {
            labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July'],
            datasets: [
            @for (int i = 0; i < Model.mat.Length; i++)
            {

                @:{
                @:label: "data@(DateTime.Now.ToString())",
                @:fill: false,
                @:data:[@foreach (var t in Model.mat[i])
                {@(t + ",")} ]
                @: }
                @:,
            }
            ]
        },
        options: {
            responsive: true,
            title: {
                display: true,
                text: 'Chart.js Line Chart'
            },
            tooltips: {
                mode: 'index',
                intersect: false,
            },
            hover: {
                mode: 'nearest',
                intersect: true
            },
            scales: {
                xAxes: [{
                    display: true,
                    scaleLabel: {
                        display: true,
                        labelString: 'Month'
                    }
                }],
                yAxes: [{
                    display: true,
                    scaleLabel: {
                        display: true,
                        labelString: 'Value'
                    }
                }]
            }
        }
    };

    window.onload = function () {
        var ctx = document.getElementById('canvas').getContext('2d');
        window.myLine = new Chart(ctx, config);
    };




</script>







<center>
    <h1 style="font-family:'Agency FB'">Wellcome to the Administrator's Menu</h1>
</center>

